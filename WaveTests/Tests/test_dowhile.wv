import std.assert;

public int main()
{
    int n = 0;
    int sum = 0;
    do
    {
        sum += n;
        n++;
    } while (n < 5);
    Assert(sum == 10);  // The sum of 0 + 1 + 2 + 3 + 4 should be 10

    int m = 10;
    int count = 0;
    do
    {
        count++;
    } while (m < 10);
    Assert(count == 1);  

    int x = 5;
    int y = 3;
    int result = 0;
    do
    {
        if (x > y)
        {
            result += x;
        }
        x--;
        y++;
    } while (x > 0 && y < 10);
    Assert(result == 5);   

    int z = 1;
    int total = 0;
    do
    {
        total += z;
        if (total >= 10)
        {
            break; 
        }
        z++;
    } while (z <= 5);
    Assert(total == 10);  

	return 0;
}