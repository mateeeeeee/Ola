import std.assert;

public int main()
{
    // Test a simple while loop that increments a variable
    int sum = 0;
    int i = 1;
    while (i <= 5)
    {
        sum += i;
        i++;
    }
    Assert(sum == 15);  

    int count = 0;
    while (count > 0)
    {
        Assert(false);  
    }
    Assert(count == 0);  


    int countUpTo = 5;
    int counter = 0;
    while (true)
    {
        counter++;
        if (counter == countUpTo)
        {
            break;  
        }
    }
    Assert(counter == countUpTo);  
    return 0;
}