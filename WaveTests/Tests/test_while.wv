import std.assert;

public int main()
{
    int sum = 0;
    int i = 1;
    while (i <= 5)
    {
        sum += i;
        i++;
    }
    Assert(sum == 15);  

    int count = 0;
    while (count > 0)
    {
        Assert(false);  
    }
    Assert(count == 0);  


    int countUpTo = 5;
    int counter = 0;
    while (true)
    {
        counter++;
        if (counter == countUpTo)
        {
            break;  
        }
    }
    Assert(counter == countUpTo);  

    int n = 0;
    int count2 = 0;
    while (count2 < 5)
    {
        count2++;
        if (count2 % 2 == 0)
        {
            continue;  // Skip even counts
        }
        n += count2;
    }
    Assert(n == 9);

    return 0;
}