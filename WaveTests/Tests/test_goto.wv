import std.assert;


public int main()
{
    int x = 0;
    int y = 0;

    // Test a basic goto statement
    goto Label1;

    x = 1;  // This should not execute

Label1:
    y = 2;  // This should execute

    Assert(x == 0);  // x should still be 0
    Assert(y == 2);  // y should be 2

    // Test a conditional goto statement
    int choice = 1;
    if (choice == 1)
    {
        goto Label2;
    }

    x = 3;  // This should not execute

Label2:
    y = 4;  // This should execute

    Assert(x == 0);  // x should still be 0
    Assert(y == 4);  // y should be 4

    return 0;
}