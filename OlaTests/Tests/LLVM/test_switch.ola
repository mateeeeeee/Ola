import std.assert;

// Global variables
int GlobalIntX = 2;
char GlobalCharX = 'b';

void TestSwitchBasic()
{
    int value = 1;
    int result = 0;

    switch (value)
    {
        case 1:
            result = 10;
            break;
        case 2:
            result = 20;
            break;
        default:
            result = 0;
    }

    Assert(result == 10);
}

void TestSwitchMultipleCases()
{
    int value = 3;
    int result = 0;

    switch (value)
    {
        case 1:
        case 2:
            result = 10;
            break;
        case 3:
        case 4:
            result = 20;
            break;
        default:
            result = 0;
    }

    Assert(result == 20);
}

void TestSwitchFallthrough()
{
    int value = 2;
    int result = 0;

    switch (value)
    {
        case 1:
            result = 10;
        case 2: // Fall through to the next case
            result += 20;
        case 3:
            result += 30;
            break;
        default:
            result = 0;
    }

    Assert(result == 50);
}

void TestSwitchWithBreak()
{
    int value = 2;
    int result = 0;

    switch (value)
    {
        case 1:
            result = 10;
            break;
        case 2:
            result = 20;
            break;
        case 3:
            result = 30;
            break;
        default:
            result = 0;
    }

    Assert(result == 20);
}

