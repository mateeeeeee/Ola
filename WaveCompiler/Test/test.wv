void ModifyInt(ref int a)
{
	++a;
	int b = a;
	++b;
}

public int main()
{
	int a = 9;
	ModifyInt(a);
	Assert(a == 10);
	ref int b = a;
	++b;
	Assert(a == 11);
	return a;
}
