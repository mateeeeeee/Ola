import std.assert;

// Test addition for int
void TestIntAddition()
{
    int a = 5;
    int b = 10;
    int result = a + b;
    Assert(result == 15);

    int c = 7;
    a += c;
    Assert(a == 12);
}

// Test subtraction for int
void TestIntSubtraction()
{
    int a = 15;
    int b = 7;
    int result = a - b;
    Assert(result == 8);

    int c = 3;
    a -= c;
    Assert(a == 12);
}


// Main testing function
public int main()
{
    TestIntAddition();
    TestIntSubtraction();

    return 0;
}